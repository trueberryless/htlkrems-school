<Window x:Class="WPF_realDataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_realDataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="tb1" HorizontalAlignment="Left" Margin="125,92,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="tb2" HorizontalAlignment="Left" Margin="125,150,0,0" TextWrapping="Wrap" Text="{Binding ElementName=tb1, Path=Text}" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="tb3" HorizontalAlignment="Left" Margin="125,217,0,0" TextWrapping="Wrap" Text="{Binding Text, ElementName=tb1}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
